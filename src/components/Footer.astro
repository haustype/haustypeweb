---
const navItems = [
  { href: '/fonts', label: 'Fonts' },
  { href: '/in-use', label: 'In Use' },
  { href: '/projects', label: 'Projects' },
  { href: '/stuff', label: 'Stuff' },
  { href: '/information', label: 'Information' },
];
---

<footer class="text-white" style="background-color: #0a0a0a;">
  <div class="grid grid-cols-6 gap-4 w-full max-w-content mx-auto px-8 py-6 items-center">
    <a href="/" class="col-span-2 md:col-span-1 flex items-center gap-2 font-normal text-base tracking-tight hover:opacity-80 transition-opacity">
      <img src="/logo.svg" alt="" class="h-[13px] w-auto" aria-hidden="true" />
      Haus Type
    </a>
    <nav class="hidden md:flex col-span-4 justify-center gap-6" aria-label="Footer navigation">
      {navItems.map((item) => (
        <a href={item.href} class="text-base hover:opacity-80 transition-opacity">
          {item.label}
        </a>
      ))}
    </nav>
    <button
      type="button"
      fontdue-click="open-store-modal"
      fontdue-store-route="cart"
      class="col-span-2 md:col-span-1 text-right text-base hover:opacity-80 transition-opacity bg-transparent border-none cursor-pointer font-inherit text-inherit"
    >
      Cart
    </button>
  </div>
</footer>
