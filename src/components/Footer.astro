---
const navItems = [
  { href: '/fonts', label: 'Fonts' },
  { href: '/in-use', label: 'In Use' },
  { href: '/projects', label: 'Projects' },
  { href: '/stuff', label: 'Stuff' },
  { href: '/information', label: 'Information' },
];
---

<footer class="bg-haus-black text-white">
  <div class="grid grid-cols-6 gap-3 w-full max-w-content mx-auto px-[30px] py-6 items-center">
    <a href="/" class="col-span-2 md:col-span-1 flex items-center gap-2 font-bold text-lg tracking-tight hover:opacity-80 transition-opacity">
      <img src="/logo.svg" alt="" class="h-5 w-auto" aria-hidden="true" />
      Haus Type
    </a>
    <nav class="hidden md:flex col-span-4 justify-center gap-6" aria-label="Footer navigation">
      {navItems.map((item) => (
        <a href={item.href} class="text-sm hover:opacity-80 transition-opacity">
          {item.label}
        </a>
      ))}
    </nav>
    <a href="/cart" class="col-span-2 md:col-span-1 text-right text-sm hover:opacity-80 transition-opacity">
      Cart
    </a>
  </div>
</footer>
