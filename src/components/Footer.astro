---
const footerLinks = [
  { href: '/typefaces', label: 'Trial Fonts' },
  { href: '/information', label: 'Licensing' },
  { href: 'https://instagram.com/haus_type', label: 'Instagram', external: true },
];
---

<footer class="text-white" style="background-color: #0a0a0a;">
  <div class="grid grid-cols-6 gap-4 w-full max-w-content mx-auto px-8 pt-8 pb-[60px] md:pb-[72px] items-start">
    <div class="col-span-6 md:col-span-3 flex flex-col gap-8">
      <a href="/" class="flex items-center gap-2 font-normal text-base tracking-tight hover:opacity-80 transition-opacity w-fit">
        <img src="/logo.svg" alt="" class="h-[13px] w-auto" aria-hidden="true" />
        Haus Type
      </a>
      <nav class="flex flex-col gap-[0.45rem]" aria-label="Footer links">
        {footerLinks.map((item) => (
          <a
            href={item.href}
            class="text-base hover:opacity-80 transition-opacity w-fit"
            {...(item.external && { target: '_blank', rel: 'noopener noreferrer' })}
          >
            {item.label}
          </a>
        ))}
      </nav>
    </div>
    <div class="col-span-6 md:col-span-3 md:justify-self-end">
      <fontdue-newsletter-signup
        button-label="Subscribe"
        opt-in-label="I agree to receive newsletters almost never"
        opt-in-checkbox-checked
      />
    </div>
  </div>
</footer>
