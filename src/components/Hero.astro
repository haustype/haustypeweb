---
interface Props {
  items: Array<{
    type: 'image' | 'video';
    src: string;
    alt?: string;
  }>;
}

const { items } = Astro.props;
const currentItem = items[0] ?? { type: 'image', src: '/hero-placeholder.jpg', alt: 'Haus Type font display' };
---

<section class="bg-haus-black">
  <div class="grid grid-cols-6 max-w-7xl mx-auto">
    <div class="col-span-6 flex justify-center items-center min-h-[70vh] md:min-h-[80vh] p-6">
      {currentItem.type === 'video' ? (
        <video
          src={currentItem.src}
          autoplay
          muted
          loop
          playsinline
          class="max-w-full max-h-[75vh] object-contain"
        />
      ) : (
        <img
          src={currentItem.src}
          alt={currentItem.alt ?? 'Font showcase'}
          width={1200}
          height={800}
          class="max-w-full max-h-[75vh] object-contain"
          fetchpriority="high"
        />
      )}
    </div>
  </div>
</section>
