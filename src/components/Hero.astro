---
interface Props {
  items: Array<{
    type: 'image' | 'video';
    src: string;
    alt?: string;
  }>;
}

const { items } = Astro.props;
const currentItem = items[0] ?? { type: 'image', src: '/hero-placeholder.jpg', alt: 'Haus Type font display' };
---

<section class="bg-haus-black min-h-screen flex items-center justify-center">
  <div class="w-full max-w-6xl px-4 md:px-5 flex justify-center items-center">
      {currentItem.type === 'video' ? (
        <video
          src={currentItem.src}
          autoplay
          muted
          loop
          playsinline
          class="max-w-full max-h-[85vh] object-contain"
        />
      ) : (
        <img
          src={currentItem.src}
          alt={currentItem.alt ?? 'Font showcase'}
          width={1200}
          height={800}
          class="max-w-full max-h-[85vh] object-contain"
          fetchpriority="high"
        />
      )}
  </div>
</section>
