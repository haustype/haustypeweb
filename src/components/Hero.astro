---
interface Props {
  items: Array<{
    type: 'image' | 'video';
    src: string;
    alt?: string;
  }>;
}

const { items } = Astro.props;
const currentItem = items[0] ?? { type: 'image', src: '/hero-placeholder.jpg', alt: 'Haus Type font display' };
---

<section class="h-screen flex items-center justify-center" style="background-color: #0a0a0a;">
  <div class="w-full max-w-content px-8 flex justify-center items-center h-full">
      {currentItem.type === 'video' ? (
        <video
          src={currentItem.src}
          autoplay
          muted
          loop
          playsinline
          class="max-w-full max-h-[65vh] w-auto object-contain"
        />
      ) : (
        <img
          src={currentItem.src}
          alt={currentItem.alt ?? 'Font showcase'}
          width={1200}
          height={800}
          class="max-w-full max-h-[65vh] w-auto object-contain"
          fetchpriority="high"
        />
      )}
  </div>
</section>
