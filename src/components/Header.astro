---
const navItems = [
  { href: '/fonts', label: 'Fonts' },
  { href: '/in-use', label: 'In Use' },
  { href: '/projects', label: 'Projects' },
  { href: '/stuff', label: 'Stuff' },
  { href: '/information', label: 'Information' },
];
---

<header class="text-white" style="background-color: #0a0a0a;">
  <div class="relative flex justify-between items-center w-full max-w-content mx-auto px-8 py-4">
    <a href="/" class="flex items-center gap-2 font-normal text-base tracking-tight hover:opacity-80 transition-opacity z-10">
      <img src="/logo.svg" alt="" class="h-[13px] w-auto" aria-hidden="true" />
      Haus Type
    </a>
    <nav class="hidden md:flex absolute left-1/2 top-1/2 -translate-x-1/2 -translate-y-1/2 gap-6" aria-label="Main navigation">
      {navItems.map((item) => (
        <a href={item.href} class="text-base px-4 py-2 hover:opacity-80 transition-opacity">
          {item.label}
        </a>
      ))}
    </nav>
    <button
      type="button"
      fontdue-click="open-store-modal"
      fontdue-store-route="cart"
      class="text-base hover:opacity-80 transition-opacity z-10 ml-auto bg-transparent border-none cursor-pointer font-inherit"
    >
      Cart
    </button>
  </div>
  <!-- Mobile nav -->
  <nav class="md:hidden px-8 pb-4 flex flex-wrap gap-4" aria-label="Mobile navigation">
    {navItems.map((item) => (
      <a href={item.href} class="text-base hover:opacity-80 transition-opacity">
        {item.label}
      </a>
    ))}
  </nav>
</header>
