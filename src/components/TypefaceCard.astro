---
interface Props {
  name: string;
  category: string;
  styles: number;
  slug: string;
  image: string;
}

const { name, category, styles, image } = Astro.props;
---

<a href={`/fonts/${Astro.props.slug}`} class="block bg-white rounded-[10px] overflow-hidden group">
  <img
    src={image}
    alt={name}
    width={400}
    height={300}
    class="w-full h-48 object-cover"
  />
  <div class="p-5 md:p-6 flex justify-between items-baseline gap-4">
    <h3 class="text-xl md:text-2xl font-bold text-black group-hover:text-haus-red transition-colors truncate">
      {name}
    </h3>
    <span class="text-sm text-stone-500 flex-shrink-0">
      {styles} {styles === 1 ? 'style' : 'styles'}
    </span>
  </div>
</a>
