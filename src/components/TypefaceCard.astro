---
interface Props {
  name: string;
  category: string;
  styles: number;
  slug: string;
  image: string;
}

const { name, slug, image, styles } = Astro.props;
---

<article class="bg-white rounded-xl h-full flex flex-col w-full">
  <a href={`/typefaces/${slug}`} class="block flex-1 flex flex-col min-h-0">
    <!-- Image area: rounded top, reserves space before load -->
    <div class="rounded-t-xl px-16 md:px-[72px] pt-10 md:pt-[56px] pb-8 md:pb-[40px] bg-white shrink-0">
      <div class="aspect-[4/3] flex items-center justify-center w-full min-w-0">
        <img
          src={image}
          alt={name}
          width={400}
          height={300}
          class="max-w-full max-h-full object-contain w-full"
          loading="lazy"
        />
      </div>
    </div>
    <!-- Text row -->
    <div class="px-6 pb-6 flex justify-between items-baseline gap-4 shrink-0 rounded-b-xl">
      <h3 class="text-base font-normal text-black hover:text-haus-red transition-colors truncate">
        {name}
      </h3>
      <span class="text-base text-[#999999] shrink-0">
        {styles} {styles === 1 ? 'style' : 'styles'}
      </span>
    </div>
  </a>
</article>
