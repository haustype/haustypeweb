---
interface Props {
  text: string;
}

const { text } = Astro.props;
---

<section class="bg-haus-grey py-12 md:py-16">
  <div class="grid grid-cols-6 gap-6 max-w-7xl mx-auto px-6">
    <div class="col-span-6 md:col-start-4 md:col-span-3">
      <p class="text-base md:text-lg leading-relaxed text-stone-700">
        {text}
      </p>
    </div>
  </div>
</section>
