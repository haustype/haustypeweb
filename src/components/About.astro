---
interface Props {
  text: string;
}

const { text } = Astro.props;
---

<section class="bg-haus-grey py-10 md:py-12">
  <div class="grid grid-cols-6 gap-4 w-full max-w-content mx-auto px-[30px]">
    <div class="col-span-6 md:col-start-4 md:col-span-3">
      <p class="text-base md:text-lg leading-relaxed text-stone-700">
        {text}
      </p>
    </div>
  </div>
</section>
