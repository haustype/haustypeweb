---
import TypefaceCard from './TypefaceCard.astro';

interface Typeface {
  name: string;
  category: string;
  styles: number;
  slug: string;
}

interface Props {
  typefaces: Typeface[];
}

const { typefaces } = Astro.props;
---

<section class="bg-haus-grey py-10 md:py-12">
  <div class="grid grid-cols-6 gap-4 w-full max-w-content mx-auto px-[30px]">
    <h2 class="col-span-6 text-2xl md:text-3xl font-bold text-black mb-4">
      Our Typefaces
    </h2>
    {typefaces.map((tf) => (
      <div class="col-span-6 sm:col-span-3 lg:col-span-2">
        <TypefaceCard {...tf} />
      </div>
    ))}
  </div>
</section>
