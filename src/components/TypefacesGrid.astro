---
import TypefaceCard from './TypefaceCard.astro';

interface Typeface {
  name: string;
  category: string;
  styles: number;
  slug: string;
  image: string;
}

interface Props {
  typefaces: Typeface[];
}

const { typefaces } = Astro.props;
---

<section class="bg-haus-grey py-10 md:py-12">
  <div class="w-full max-w-content mx-auto px-8">
    <h2 class="text-[1.3rem] font-normal text-black mb-6">
      Our Typefaces
    </h2>
    <ul class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-x-4 gap-y-4 list-none m-0 p-0">
      {typefaces.map((tf) => (
        <li class="flex">
          <TypefaceCard {...tf} />
        </li>
      ))}
    </ul>
  </div>
</section>
