---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="404 | Haus Type" description="Page not found">
  <div class="min-h-screen flex-1 w-full flex flex-col items-center justify-center bg-[#0a0a0a] text-white text-center px-6">
    <h1 class="text-[10rem] sm:text-[14rem] font-medium leading-none tracking-tighter text-white/90">404</h1>
    <p class="text-xl sm:text-2xl text-stone-500 mt-4 mb-2">Page not found</p>
    <p class="text-stone-600 text-sm sm:text-base max-w-md mb-10">The page you're looking for has wandered off.</p>
    <a href="/" class="text-stone-400 hover:text-white underline underline-offset-4 transition-colors text-lg">
      Back to home
    </a>
  </div>
</BaseLayout>
