---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { getCollection } from 'astro:content';

const posts = (await getCollection('blog', ({ data }) => !data.draft))
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());
---

<BaseLayout
  title="Blog | Haus Type"
  description="News and articles from Haus Type foundry."
>
  <Header />
  <main class="bg-haus-grey min-h-screen">
    <div class="grid grid-cols-6 gap-4 max-w-6xl mx-auto px-4 md:px-5 py-16">
      <h1 class="col-span-6 text-3xl md:text-4xl font-bold text-black mb-8">Blog</h1>
      {posts.map((post) => (
        <article class="col-span-6 md:col-span-2">
          <a href={`/blog/${post.slug}`} class="block group">
            <h2 class="text-xl font-bold text-black group-hover:text-haus-red transition-colors">
              {post.data.title}
            </h2>
            <time datetime={post.data.pubDate.toISOString()} class="text-stone-500 text-sm block mt-1">
              {post.data.pubDate.toLocaleDateString('en-GB', { dateStyle: 'medium' })}
            </time>
          </a>
        </article>
      ))}
    </div>
  </main>
  <Footer />
</BaseLayout>
