---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { safeLoadQuery } from '../../sanity/lib/safe-fetch';
import { getCollection } from 'astro:content';

// Try Sanity first, fallback to Astro content
const { data: sanityPosts } = await safeLoadQuery<Array<{
  title: string;
  slug?: { current: string };
  publishedAt?: string;
  description?: string;
}>>({
  query: `*[_type == "post" && !draft] | order(publishedAt desc){ title, slug, publishedAt, description }`,
});

const posts = sanityPosts?.length
  ? sanityPosts.map((p) => ({
      slug: p.slug?.current ?? p.title.toLowerCase().replace(/\s+/g, '-'),
      data: {
        title: p.title,
        description: p.description,
        pubDate: p.publishedAt ? new Date(p.publishedAt) : new Date(),
      },
    }))
  : (await getCollection('blog', ({ data }) => !data.draft))
      .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
      .map((p) => ({ slug: p.slug, data: p.data }));
---

<BaseLayout
  title="Blog | Haus Type"
  description="News and articles from Haus Type foundry."
>
  <Header />
  <main class="bg-haus-grey min-h-screen">
    <div class="grid grid-cols-6 gap-4 w-full max-w-content mx-auto px-8 py-16">
      <h1 class="col-span-6 text-3xl md:text-4xl font-normal text-black mb-8">Blog</h1>
      {posts.map((post) => (
        <article class="col-span-6 md:col-span-2">
          <a href={`/blog/${post.slug}`} class="block group">
            <h2 class="text-xl font-normal text-black group-hover:text-haus-red transition-colors">
              {post.data.title}
            </h2>
            <time datetime={post.data.pubDate.toISOString()} class="text-stone-500 text-sm block mt-1">
              {post.data.pubDate.toLocaleDateString('en-GB', { dateStyle: 'medium' })}
            </time>
          </a>
        </article>
      ))}
    </div>
  </main>
  <Footer />
</BaseLayout>
