---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { safeLoadQuery } from '../../sanity/lib/safe-fetch';
import { getCollection } from 'astro:content';

const { data: siteSettings } = await safeLoadQuery<{ blogPageTitle?: string | null } | null>({
  query: `*[_type == "siteSettings"][0]{ blogPageTitle }`,
});

const blogTitle = siteSettings?.blogPageTitle?.trim() || 'Blog';

// Try Sanity first, fallback to Astro content
const { data: sanityPosts } = await safeLoadQuery<Array<{
  title: string;
  slug?: { current: string };
  publishedAt?: string;
  description?: string;
}>>({
  query: `*[_type == "post" && !draft] | order(publishedAt desc){ title, slug, publishedAt, description }`,
});

const posts = sanityPosts?.length
  ? sanityPosts.map((p) => ({
      slug: p.slug?.current ?? p.title.toLowerCase().replace(/\s+/g, '-'),
      data: {
        title: p.title,
        description: p.description,
        pubDate: p.publishedAt ? new Date(p.publishedAt) : new Date(),
      },
    }))
  : (await getCollection('blog', ({ data }) => !data.draft))
      .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
      .map((p) => ({ slug: p.slug, data: p.data }));
---

<BaseLayout
  title={`${blogTitle} | Haus Type`}
  description="News and articles from Haus Type foundry."
>
  <Header />
  <main class="bg-haus-grey flex-1" data-reveal>
    <article class="w-full px-8 py-20">
      <div class="w-full max-w-content mx-auto grid grid-cols-1 md:grid-cols-2 gap-8 md:gap-16 mb-16">
        <header>
          <h1 class="font-normal text-black">{blogTitle}</h1>
        </header>
        <div class="flex flex-col gap-8">
      {posts.map((post) => (
        <article>
          <a href={`/blog/${post.slug}`} class="block group">
            <h2 class="text-xl font-normal text-black group-hover:text-haus-red transition-colors">
              {post.data.title}
            </h2>
            <time datetime={post.data.pubDate.toISOString()} class="text-[#999999] text-sm block mt-1">
              {post.data.pubDate.toLocaleDateString('en-GB', { dateStyle: 'medium' })}
            </time>
          </a>
        </article>
      ))}
        </div>
      </div>
    </article>
  </main>
  <Footer />
</BaseLayout>
